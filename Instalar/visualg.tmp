algoritmo "Santos x Boca Juniors"

var
Final,Gols1,Gols2,Dif:Inteiro
Status:caractere
Time1,Time2:caractere

inicio
Escreval("Digite o nome do primeiro time: ")
Leia(Time1)
Escreval("Digite o nome do segundo time: ")
Leia(Time2)
Escreval("-----------------------------------------")
Escreval("        ",Time1," x ",Time2,"            ")
Escreval("-----------------------------------------")
Escreval("Gols do ",Time1,": ")
Leia(Gols1)
Escreval("Gols do ",Time2,": ")
Leia(Gols2)
Dif<-(Abs(Gols1-Gols2))
Escolha(Dif)
            Caso 0
                 Status<-("Empate")
            Caso 1,2,3,4
                 Status<-("Partida Normal")
            OutroCaso
                 Status<-("Goleada")
FimEscolha
Escreval("-----------------------------------------")
Escreval("Diferença de gols: ",Dif)
Escreval("Satatus da Partida: ",Status)
Escreval("-----------------------------------------")
Escreval(" ")
fimalgoritmo
