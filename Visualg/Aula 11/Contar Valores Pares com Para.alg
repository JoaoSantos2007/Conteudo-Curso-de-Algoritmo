algoritmo "Contar Valores Pares"

var
N2,Cont3:Inteiro

inicio
Escreval("----------------------")
Escreval(" Contar Valores Pares ")
Escreval("----------------------")
Escreva("Digite um número: ")
Leia(N2)
Se (N2 % 2 = 1)entao
   N2 <- N2 - 1
FimSe
Para Cont3<- N2 ate 0 passo -2 faca
     Escreval(Cont3)
FimPara
fimalgoritmo
